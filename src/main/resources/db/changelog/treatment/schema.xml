<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_table_for_record" author="donglt">
        <createTable tableName="record">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_by_user_id" type="int(11)"/>
            <column name="created_by_user_id" type="int(11)"/>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>

            <column name="patient_id" type="int(11)"/>
            <column name="doctor_id" type="int(11)"/>
        </createTable>

        <createTable tableName="symptom">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_by_user_id" type="int(11)"/>
            <column name="created_by_user_id" type="int(11)"/>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>

            <column name="record_id" type="int(11)"/>
            <column name="type" type="varchar(100)"/>

            <column name="description" type="varchar(100)"/>
        </createTable>

        <createTable tableName="conclusion">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_by_user_id" type="int(11)"/>
            <column name="created_by_user_id" type="int(11)"/>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>

            <column name="record_id" type="int(11)"/>
            <column name="conclusion" type="varchar(100)"/>
        </createTable>

        <createTable tableName="treatment">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_by_user_id" type="int(11)"/>
            <column name="created_by_user_id" type="int(11)"/>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>

            <column name="conclusion_id" type="int(11)"/>
            <column name="type" type="varchar(100)"/>

            <column name="description" type="varchar(100)"/>
            <column name="from" type="TIMESTAMP"/>
            <column name="to" type="TIMESTAMP"/>

        </createTable>
    </changeSet>

</databaseChangeLog>